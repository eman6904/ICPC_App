<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ui.Home">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@color/purple_500"
        android:gravity="center"
        android:textAlignment="center"
        android:theme="?actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:titleTextColor="@color/black">
    </androidx.appcompat.widget.Toolbar>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_490sdp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView2.Cut"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="20dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center_horizontal"
           android:layout_gravity="center"
           android:layout_marginTop="@dimen/_10sdp"
           android:orientation="vertical">

           <TextView
               android:id="@+id/textView2"
               android:layout_width="@dimen/_180sdp"
               android:layout_height="@dimen/_40sdp"
               android:background="@drawable/custom_shape"
               android:gravity="center"
               android:text="What Is ICPC..?"
               android:textColor="@color/white"
               android:textSize="@dimen/_13sdp"
               android:textStyle="bold"
               android:padding="@dimen/_5sdp"
               android:layout_marginTop="@dimen/_30sdp"/>

           <TextView
            android:id="@+id/textView3"
            android:text="How To Start.."
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_40sdp"
               android:gravity="center"
            android:textStyle="bold" android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/white"
               android:background="@drawable/custom_shape"
               android:layout_marginTop="@dimen/_30sdp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
            android:background="@drawable/custom_shape"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Training Content" />
           <TextView
               android:id="@+id/textView7"
               android:layout_width="@dimen/_180sdp"
               android:layout_height="@dimen/_40sdp"
               android:gravity="center"
               android:textStyle="bold"
               android:padding="@dimen/_5sdp"
               android:textSize="@dimen/_13sdp"
               android:background="@drawable/custom_shape"
               android:textColor="@color/white"
               android:layout_marginTop="@dimen/_30sdp"
               android:text="What Is Contest?" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
            android:background="@drawable/custom_shape"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Achievements" />

       </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:background="@drawable/circular"
        android:src="@drawable/pic4"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="Welcome In Main Page"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089" />


</androidx.constraintlayout.widget.ConstraintLayout>